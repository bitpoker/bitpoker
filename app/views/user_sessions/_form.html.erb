<%= form_for(@user_session) do |f| %>
<% if @user_session.errors.any? %>
<div id="error_explanation">
  <div class="row">
    <div class="large-12 columns">
      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user session from being saved:</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <ul>
        <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>

<div id="login-wrapper">
  <div class="row">
    <div class="large-6 large-centered small-10 small-centered columns field">
      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => 'arst@neio.com' %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 large-centered small-10 small-centered columns field">
      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => 'password' %>
    </div>
  </div>
  <div class="row" id="button-row">
    <div class="large-2 push-4 columns actions">
      <%= f.submit 'Login', :class => 'button' %>
    </div>
    <div class="large-2 pull-4 columns actions">
      <%= link_to 'Register', :register, :class => 'button' %>
    </div>
  </div>
</div>
<% end %>
