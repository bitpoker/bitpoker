<div class="row">
  <div class="large-12 columns">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <p>
      <b>Username:</b>
      <%= @user.username %>
    </p>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <p>
      <b>Crypted password:</b>
      <%= @user.crypted_password %>
    </p>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <p>
      <b>Password salt:</b>
      <%= @user.password_salt %>
    </p>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <p>
      <b>Persistence token:</b>
      <%= @user.persistence_token %>
    </p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
  </div>
</div>